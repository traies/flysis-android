<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ar.edu.itba.it.hci.flysis.MainActivity"
    android:orientation="vertical"
    android:clipToPadding="false"
    >
    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_head_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/activity_maps"
        android:clipToPadding="false"
        android:elevation="0dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/ic_add"
        android:layout_marginBottom="-40dp"
        android:id="@+id/floatingActionButton"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:tint="@color/cast_expanded_controller_progress_text_color"
        app:backgroundTint="@android:color/holo_red_dark"
        android:elevation="10dp"
        app:fabSize="normal"
        app:elevation="15dp"
        android:fitsSystemWindows="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/map"
        android:orientation="vertical"
        android:background="@drawable/rect_back"
        android:elevation="5dp"
        android:id="@+id/linearLayout"
        android:fitsSystemWindows="true">
        <!--
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            android:paddingTop="0dp"
            android:layout_above="@+id/map"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-10dp"
            android:clipToPadding="false"
            android:elevation="3dp"/>
        -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:clipToPadding="false"
            android:text="Vuelo XXXX"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:clipToPadding="false"
                android:text="Sale en 20 minutos "
                android:textSize="16dp"
                android:textColor="#5b5b5b"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="false"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:clipToPadding="false"
                android:text="Abordando"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_centerHorizontal="false"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/textView3"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf"
            android:layout_margin="15dp"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/flight_origin"
            android:clipToPadding="false"
            android:text="Origen"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flight_origin_content"
                android:clipToPadding="false"
                android:text="Buenos Aires"
                android:textSize="16dp"
                android:textColor="#424242"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flight_destination_2"
                android:clipToPadding="false"
                android:text="Destino"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="false"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flight_destination_content_2"
                android:clipToPadding="false"
                android:text="Miami"
                android:textSize="16dp"
                android:textColor="#424242"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_info_more"
            android:clickable="true"
            android:clipToPadding="false"
            android:text="Ver mas"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="#ff0000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf"
            android:layout_margin="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flight_comments_head"
            android:clipToPadding="false"
            android:text="Recomendar el vuelo"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_above="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:textColorHint="#ff0000"/>
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:onClick="scrollToTop"
            android:src="@drawable/ic_thumb_up"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flight_destination"
                android:clipToPadding="false"
                android:text="Destino"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="false"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flight_destination_content"
                android:clipToPadding="false"
                android:text="Miami"
                android:textSize="16dp"
                android:textColor="#424242"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>



    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:theme="?attr/toolbarStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar2"
        android:title="hola mundo"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:foregroundTint="@color/cast_expanded_controller_text_color"
        android:hapticFeedbackEnabled="true"
        app:titleTextColor="@color/cast_expanded_controller_progress_text_color"
        android:foreground="@android:color/transparent"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
</ScrollView>